<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
    <section id="feed-posts">
            <% if(locals.user){ %>
                
            <form action="/students/create" id="new-student-form" method="POST">
                <span>Create Student</span>
                <div class="row mt-2 ">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Name" name="name" aria-label="First name">
                    </div>
                    <div class="col">
                        <input type="email" class="form-control" placeholder="Email" name="email" aria-label="Email">
                    </div>
                    <div class="col">
                        <input class="form-control" type="number" placeholder="Age" name="age" aria-label="Age">
                    </div>
                    <div class="col">
                        <input class="form-control" type="text" placeholder="College" name="college" aria-label="College">
                    </div>
                    <div class="col">
                        <select class="form-select" name="status" id="status">
                            <option selected value="not_placed">Not Placed</option>
                            <option selected value="placed">Placed</option>
                        </select>
                        <!-- <input class="form-control" type="text" placeholder="Status" name="status" aria-label="status"> -->
                    </div>
                    </div>
                    <div class="row mt-2 ">
                    <div class="col">
                        <input class="form-control" type="text" placeholder="Batch" name="batch" aria-label="batch">
                    </div>
                    <div class="col">
                        <input class="form-control" type="text" placeholder="Web Dev Scores" name="webD" aria-label="webDScores">
                    </div>
                    <div class="col">
                        <input class="form-control" type="text" placeholder="DSA Scores" name="dsa" aria-label="dsa">
                    </div>
                    <div class="col">
                        <input class="form-control" type="text" placeholder="React Scores" name="react" aria-label="react">
                    </div>
                    
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
            <hr>
            <% } %>

        
            <div id="posts-list-container">
                <!-- <h5>Student Details</h5> -->
                Students:
                <table class="table" id="students-table">
                    <thead>
                        <tr>
                          <% if (locals.user){ %>
                            <th scope="col">#</th>
                          <% } %>
                          <th scope="col">Email</th>
                          <th scope="col">Name</th>
                          <th scope="col">Age</th>
                          <th scope="col">College</th>
                          <th scope="col">Placement Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(student of all_students){ %>
                            
                        <%- include('_student') -%>
                            
                        <%} %>
                    </tbody>
                </table>
            </div>
        </section>
</div>

<!-- importing this script for creating the comments -->
<script src="/js/home_students.js"></script>


